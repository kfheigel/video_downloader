{% block navbar %}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand link" href="{{ path('index') }}"><img rel="icon" type="image/x-icon" height="15" alt="Heivice icon" src="{{ asset('favicon/favicon.ico') }}" />eivice</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Services
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item {% if app.request.get('_route') == 'downloader' %} active {% endif %}" href="{{ path('downloader') }}">Downloader</a>
                        <a class="dropdown-item {% if app.request.get('_route') == 'shortener' %} active {% endif %}" href="{{ path('shortener') }}">URL Shortener</a>
                        <a class="dropdown-item disabled {% if app.request.get('_route') == '' %} active {% endif %}" href="#">Memos</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item disabled {% if app.request.get('_route') == '' %} active {% endif %}" href="#">Orbit Generator</a>
                        <a class="dropdown-item disabled {% if app.request.get('_route') == '' %} active {% endif %}" href="#">Logistic Map Graph</a>

                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Account
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        {% if  app.user %}
                            <a class="dropdown-item {% if app.request.get('_route') == 'logout' %} active {% endif %}" href="{{ path('app_logout') }}">Logout</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item disabled text-danger {% if app.request.get('_route') == '' %} active {% endif %}" href="#">Delete Account</a>
                        {% else %}
                            <a class="dropdown-item {% if app.request.get('_route') == 'login' %} active {% endif %}" href="{{ path('app_login') }}">Login</a>
                            <a class="dropdown-item {% if app.request.get('_route') == 'register' %} active {% endif %}" href="{{ path('app_register') }}">Register</a>
                        {% endif %}
                    </div>
                </li>
                <a class="nav-link {% if app.request.get('_route') == 'about' %} active {% endif %}" href="{{ path('about') }}">About</a>
                <a class="nav-link {% if app.request.get('_route') == 'contact' %} active {% endif %}" href="{{ path('contact') }}">Contact</a>
            </div>
        </div>
    </div>
</nav>

{% endblock %}