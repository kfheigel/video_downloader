{% extends 'base.html.twig' %}

{% block title %}Memos{% endblock %}

{% block body %}

<div class="masthead text-black text-center mt-5 height">
    <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h2 class="mb-5"> 
                        <div class="mt-1">
                            <div class="result-border mt-2">
                                {% include('memos/form.html.twig') %}
                            </div>
                        </div>
                    </h2>
                    <div class="card-columns">
                        {% for memo in history %}
                            <div class="card w-100 mb-2">
                                <div class="card-body">
                                    <h5 class="card-title">{{ memo.memo }}</h5>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
