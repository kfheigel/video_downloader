{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h4>
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="text-{{ label }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </h4>
                    <h3 class="mt-3"> 
                        <h1>Register</h1>

                        {{ form_start(registrationForm) }}
                            <div class="row mt-3">
                                <div class="col">
                                    {{ form_label(registrationForm.email, 'Enter your email adress') }}
                                    {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col">
                                    {{ form_label(registrationForm.plainPassword, 'Write the password') }}
                                    {{ form_row(registrationForm.plainPassword, { 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col">
                                    {{ form_row(registrationForm.submit, { 'attr': {'class': 'btn btn-lg btn-primary mt-3 mb-3'}, 'label': 'Register!'}) }}
                                </div>
                            </div>
                        {{ form_end(registrationForm) }}
                    </h3>               
                </div>
            </div>
        </div>
    </div>
</header>
{% endblock %}
