{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="masthead text-black mt-5 height">
    <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h4>
                        {% for flashError in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}
                    </h4>
                    <h1 class="h3 mt-3 font-weight-normal">Reset your password</h1>
                    <h5 class="mt-1"> 
                        {{ form_start(requestForm) }}
                            <div class="row mt-3">
                                <div class="col">
                                    {{ form_label(requestForm.email, 'Type email adress, that you are using as login') }}
                                    {{ form_row(requestForm.email, { 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col">
                                    <button class="btn btn-lg btn-primary">Send reset password link</button>
                                </div>
                            </div>
                        {{ form_end(requestForm) }}
                    </h5>               
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}