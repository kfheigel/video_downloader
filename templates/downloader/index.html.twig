{% extends 'base.html.twig' %}

{% block title %}Downloader{% endblock %}

{% block body %}

  <header class="masthead text-black text-center mt-5">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h2 class="mb-5"> 
            Video Downloader v 0.4
            {% include('downloader/form.html.twig') %}

            {% if videoId != "" %}
                <img src="https://img.youtube.com/vi/{{ videoId }}/mqdefault.jpg">
            
            <div class="btn-group">
                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Results
                </button>
                <div class="dropdown-menu">

                {% for link in links %}
                    <a class="dropdown-item" target="_blank" href="{{ link.url }}">{{ link.format }}</a>
                {% endfor %}
                </div>
            </div>
{# 
            {% elseif  videoLink == form.input.value %}
              <h1> Sraka</h1> #}
            {% endif %}
          </h2>
        </div>
      </div>
    </div>
  </header>
{% endblock %}
