{% extends 'base.html.twig' %}

{% block title %}Heivice YouTube Downloader{% endblock %}

{% block body %}

  <header class="masthead text-black text-center mt-5">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h2 class="mb-5"> 
            {% include('downloader/form.html.twig') %}
            <div class="mt-1">
              {% if videoId != "" %}
                <div class="result-border mt-2">
                  <h4>{{ videoTitle }}</h4>
                  <a href="https://www.youtube.com/watch?v={{ videoId }}" target="_blank"><img class="mt-3" src="https://img.youtube.com/vi/{{ videoId }}/mqdefault.jpg"></a></br>
                  <div class="mt-4">
                    <div class="btn-group">
                        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Video + Audio
                        </button>
                        <div class="dropdown-menu">
                        {% for link in links %}
                          {% if ('audio' in link.format and 'video' in link.format) %}
                            <a class="dropdown-item" target="_blank" href="{{ link.url }}">{{ link.format }}</a>
                          {% endif %}
                        {% endfor %}
                        </div>
                    </div>      
                    <div class="btn-group">
                        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Video
                        </button>
                        <div class="dropdown-menu">
                        {% for link in links %}
                          {% if 'audio' not in link.format %}
                            <a class="dropdown-item" target="_blank" href="{{ link.url }}">{{ link.format }}</a>
                          {% endif %}
                        {% endfor %}
                        </div>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Audio
                        </button>
                        <div class="dropdown-menu">
                        {% for link in links %}
                          {% if 'video' not in link.format %}
                            <a class="dropdown-item" target="_blank" href="{{ link.url }}">{{ link.format }}</a>
                          {% endif %}
                        {% endfor %}
                        </div>
                    </div>
                  </div>
                </div>
              {% endif %}
            </div>
          </h2>
            {% for link in history %}
              <div class="result-border mt-2">
                <h4>{{ link.videoTitle }}</h4>
                <a href="https://www.youtube.com/watch?v={{ link.videoId }}" target="_blank"><img class="mt-3" src="https://img.youtube.com/vi/{{ link.videoId }}/mqdefault.jpg"></a></br>
              </div>
            {% endfor %}
        </div>
      </div>
    </div>
  </header>
{% endblock %}
