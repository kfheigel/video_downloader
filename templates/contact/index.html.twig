{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<header class="masthead text-black text-center mt-5">
    <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h2 class="mt-3"> 
                        {{ form_start(form) }}

                            <div class="row mt-3">
                                <div class="col">
                                    {{ form_label(form.email, 'Enter your email adress') }}
                                    {{ form_row(form.email, { 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col">
                                    {{ form_label(form.subject, 'Write the email subject') }}
                                    {{ form_row(form.subject, { 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col">
                                    {{ form_label(form.text, 'What is on your mind?') }}
                                    {{ form_row(form.text, { 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col">
                                    {{ form_row(form.submit, { 'attr': {'class': 'btn btn-lg btn-primary mt-3 mb-3'}, 'label': 'Send!'}) }}
                                </div>
                            </div>

                        {{ form_end(form) }}
                    </h2>               
                </div>
            </div>
        </div>
    </div>
</header>
{% endblock %}
